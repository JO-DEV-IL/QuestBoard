        <img style="height:50px" src="~/images/@sqlHelper.listEquipment[0].legs_img" alt="legs" /> <b>Legs:</b> @sqlHelper.listEquipment[0].legs
    </li>
    <li>
        <img style="height:50px" src="~/images/@sqlHelper.listEquipment[0].feet_img" alt="feet" /> <b>Feet:</b> @sqlHelper.listEquipment[0].feet
