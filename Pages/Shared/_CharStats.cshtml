@using QuestBoard.Pages.SqlHelpers;

@{
    int? user = ViewContext.HttpContext.Session.GetInt32("userID");
    SqlHelpers.sqlModel sqlHelper = new SqlHelpers.sqlModel();

    if (user != null)
    {
        sqlHelper.GetStatsSQL(user.Value);
        sqlHelper.GetEquipmentSQL(user.Value);
    }
}

@foreach (var userStats in sqlHelper.listUsersStats)
{
    <ul style="list-style:none">
        <li style="text-align:center">
            <img style="height:110px" src="/images/avatars/@sqlHelper.listUsersStats[0].portrait" alt="alt" />
        </li>
        <br />

        <li>
            <b>Level:</b> @sqlHelper.listUsersStats[0].level
        </li>
        <li>
            <i class="fa-solid fa-hat-wizard"></i> <b>Class:</b> @sqlHelper.listUsersStats[0].class_specialty
        </li>

        <br />
        <li>
            <i class="fa-solid fa-heart"></i> <b>HP:</b> @sqlHelper.listUsersStats[0].hp
        </li>
        <li>
            <i class="fa-solid fa-dumbbell"></i> <b>Power:</b> @sqlHelper.listUsersStats[0].power
        </li>
        <li>
            <i class="fa-solid fa-shield"></i> <b>Defense:</b> @sqlHelper.listUsersStats[0].defense
        </li>
        <li>
            <i class="fa-solid fa-dice"></i> <b>Luck:</b> @sqlHelper.listUsersStats[0].luck
        </li>
    </ul>
}

<ul style="list-style:none">
    <li>
        <img style="height:50px" src="~/images/@sqlHelper.listEquipment[0].head_img" alt="head" /> <b>Head:</b> @sqlHelper.listEquipment[0].head
