@page
@model QuestBoard.Pages.InventoryModel
@{
}

<style>
    .table thead th {
        font-size: 1.2rem;
        font-weight: 600;
        text-transform: uppercase;
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f7f7f7;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f0f0;
    }

    .table .btn {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        text-transform: uppercase;
    }

    .table .btn-warning {
        color: #fff;
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .table .btn-warning:hover {
            color: #fff;
            background-color: #e0a800;
            border-color: #d39e00;
        }
</style>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Rarity</th>
                <th>Image</th>
                <th>Info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.listUsersItems)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.quantity</td>
                    <td>@item.rarity</td>
                    <td><img class="img-fluid" src="~/images/@item.image" alt="alt" /></td>
                    <td><a class="btn btn-warning btn-sm" href="/ViewItem/Show?item=@item.name">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>