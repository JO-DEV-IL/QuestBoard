@page "{user?}"
@model QuestBoard.Pages.Users.UserPageModel
@{
}

@section Scripts{
    <script>
        function toggleList() {
            const list = document.getElementById("friends-list");
            if (list.style.display === "none") {
                list.style.display = "block";
            } else {
                list.style.display = "none";
            }
        }
    </script>
}
<style>
    .flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        background-color: #f7f7f7;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .flex-item {
        width: 150px;
        height: 150px;
        background-color: #0077b6;
        color: #fff;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        line-height: 150px;
        margin: 10px;
        transition: transform 0.3s ease-in-out;
    }

    .flex-item:hover {
        transform: scale(1.1);
    }
</style>

<div class="flex-container">
    <div class="flex-item">1</div>
