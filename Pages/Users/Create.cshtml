@page
@model QuestBoard.Pages.Users.CreateModel
@{
    Layout = null;
}

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
</head>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        max-width: 500px;
        margin: 0 auto;
    }

    .card-header {
        background-color: #343a40;
        color: #fff;
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        padding: 30px;
    }

    .form-control {
        border-radius: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 20px;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
</style>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.successMessage.Length > 0)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.successMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-header">
                <h4>Register Adventurer</h4>
            </div>
            <div class="card-body">
                <form method="post">

                    <h5>General</h5>

                    <br />

                    <div class="form-group">
                        <label for="name">Username:</label>
                        <input type="text" name="userName" id="userName" class="form-control" value="@Model.userInfo.userName" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" class="form-control" value="@Model.userInfo.email" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="password" id="password" class="form-control" value="@Model.userInfo.password" required />
                    </div>
                    <div class="form-group">
                        <label for="confirm_password">Confirm Password:</label>
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" value="@Model.userInfo.confirm_password" required />
                    </div>

                    <br />

                    <h5>Stats</h5>

                    <br />

                    <div class="form-group">
                        <select id="class_specialty" name="class_specialty" class="form-control" value="@Model.userInfo.class_specialty" required>
                            <option value="">Choose a Class:</option>
                            <option value="warrior">Warrior</option>
                            <option value="mage">Mage</option>
                            <option value="rogue">Rogue</option>
                        </select>
                    </div>

                    <form>
                        <div class="form-group">
                            <p id="pointsLeft">Points Available: <span id="totalPoints">50</span></p>
                            <table>
                                <tr>
                                    <td>Stat 1:</td>
                                    <td><input type="number" id="stat1Points" min="0" max="50" value="0"></td>
                                </tr>
                                <tr>
                                    <td>Stat 2:</td>
                                    <td><input type="number" id="stat2Points" min="0" max="50" value="0"></td>
                                </tr>
                                <tr>
                                    <td>Stat 3:</td>
                                    <td><input type="number" id="stat3Points" min="0" max="50" value="0"></td>
                                </tr>
                                <tr>
                                    <td>Stat 4:</td>
                                    <td><input type="number" id="stat4Points" min="0" max="50" value="0"></td>
                                </tr>
                                <tr>
                                    <td>Stat 5:</td>
                                    <td><input type="number" id="stat5Points" min="0" max="50" value="0"></td>
                                </tr>
                            </table>
                        </div>
                    </form>

                    <br />

                    <button type="submit" class="btn btn-primary btn-block mt-4">Join Website</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    @*For some reason, despite having a script link on Layout, JS link needs to be added to the page to have access to it*@
    <script src="~/js/site.js"></script>
</body>