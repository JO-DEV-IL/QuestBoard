                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="password" id="password" class="form-control" value="@Model.userInfo.password" required />
                    </div>
                    <div class="form-group">
                        <label for="confirm_password">Confirm Password:</label>
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" required />
                    </div>

                    <br />

                    <h5>Stats</h5>

                    <br />

                    <div class="form-group">
                        <select id="class_specialty" name="class_specialty" class="form-control" value="@Model.userInfo.class_specialty" required>
                            <option value="">Choose a Class</option>
                            <option value="warrior">Warrior</option>
                            <option value="mage">Mage</option>
                            <option value="rogue">Rogue</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <p>Total Points Available: @available</p>

                        <table>
                            <tr>
                                <td>Stat 1:</td>
