<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-header">
                <h4>Register Adventurer</h4>
            </div>
            <div class="card-body">
                <form method="post">

                    <h5>General</h5>

                    <br />

                    <div class="form-group">
                        <label for="name">Username:</label>
                        <input type="text" name="userName" id="userName" class="form-control" value="@Model.userInfo.userName" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
