@page
@model QuestBoard.Pages.Users.QuestsModel
@{
}

<div id="quest-post">
    <form method="post" style="width:50%;margin:auto">
        <div class="form-group">
            <label for="todoTitle">Quest Title</label>
            <input type="text" class="form-control" id="todoTitle" name="todoTitle">
        </div>
        <div class="form-group">
            <label for="todoDescription">Quest Description</label>
            <input type="text" class="form-control" id="todoDescription" name="todoDescription">
        </div>
        <button type="submit" class="btn btn-warning" style="margin-top:15px">Post</button>
    </form>
</div>

@*Display personal quest cards if they exist*@
<div class="grid-container" style="margin:25px 0">
    @foreach (var todo in Model.listUserQuests)
    {
        <div class="w3-card-4 w3-hover-shadow" style="width:300px;margin:10px">
            <header class="w3-container" style="background-color:#B8860B">
                <h3>Personal Quest</h3>
            </header>
            <div class="w3-container">
                <h4>@todo.title</h4>
                <hr>
                <img src="~/images/gold.png" alt="gold" class="w3-left w3-circle w3-margin-right" style="width:80px">
                <p>@todo.description</p>
            </div>
            <button class="w3-button w3-block w3-margin-top" style="background-color: #FFD700">COMPLETE QUEST</button>
        </div>
    }
</div>

