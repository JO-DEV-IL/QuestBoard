<style>
    .quest-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form {
        width: 100%;
        max-width: 600px;
        margin-bottom: 20px;
    }

        .form h2 {
            margin-top: 0;
        }

    form {
        display: flex;
        flex-direction: column;
    }

    label {
        font-weight: bold;
    }

    input[type="text"],
    textarea {
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
        border: none;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        font-size: 16px;
    }

    input[type="text"] {
        height: 40px;
    }

    button[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #3e8e41;
        }

    .flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .flex-item {
        width: 150px;
        margin: 10px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .flex-item:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
            transform: scale(1.05);
        }

        .flex-item:active {
            transform: scale(1.1);
        }

        .flex-item img {
            display: block;
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .flex-item h3 {
            margin: 10px;
            font-size: 16px;
            font-weight: bold;
        }

        .flex-item p {
            margin: 10px;
            font-size: 14px;
            line-height: 1.5;
        }

    .flex-link {
        background-color: #4CAF50;
        padding: 10px;
        text-align: center;
    }

        .flex-link a {
            color: white;
            text-decoration: none;
            font-size: 14px;
            font-weight: bold;
        }
</style>

